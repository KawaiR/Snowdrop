<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">
    <changeSet id="20220216185000" author="razanalkawai">
        <createTable tableName="reset_tokens">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"
                             unique="true"/>
            </column>
            <column name="hashed_token" type="char(64)"/>
            <column name="expiry_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="reset_tokens"
                                 baseColumnNames="user_id"
                                 constraintName="fk_reset_tokens_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>